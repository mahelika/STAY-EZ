<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Listing Details:</h3>
        </div>
    </div>
    
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card show-card">
                <!-- Image Section with Better Height Control -->
                <div class="show-img-container">
                    <img src="<%=listing.image.url%>" 
                         class="card-img-top show-img" 
                         alt="listing_img">
                </div>

                <!-- Card Body with Proper Spacing -->
                <div class="card-body show-card-body">
                    <div class="listing-header">
                        <h4 class="listing-title"><%= listing.title %></h4>
                        <div class="listing-location">
                            <i class="fas fa-map-marker-alt"></i>
                            <span><%=listing.location%>, <%=listing.country%></span>
                        </div>
                    </div>

                    <div class="listing-description">
                        <p><%=listing.description%></p>
                    </div>

                    <div class="listing-price">
                        <span class="price-amount">â‚¹<%=listing.price.toLocaleString("en-IN")%></span>
                        <span class="price-period">per night</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <br>

    
    <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" 
            class="btn btn-dark col-1 offset-3 edit-btn" >
            Edit</a>

        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
</body>
