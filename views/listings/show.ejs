<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><%= listing.title %></h3>
        </div>
    </div>
    
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card show-card">
                <!-- Image Section with Better Height Control -->
                <div class="show-img-container">
                    <img src="<%=listing.image.url%>" 
                         class="card-img-top show-img" 
                         alt="listing_img">
                </div>

                <!-- Card Body with Proper Spacing -->
                <div class="card-body show-card-body">
                    <div class="listing-header">
                        <!-- <h4 class="listing-title"><%= listing.title %></h4> -->
                        <div class="listing-location">
                            <i class="fas fa-map-marker-alt"></i>
                            <span><%=listing.location%>, <%=listing.country%></span>
                        </div>
                    </div>

                    <div class="listing-description">
                        <p><%=listing.description%></p>
                    </div>

                    <div class="listing-price">
                        <span class="price-amount">â‚¹<%=listing.price.toLocaleString("en-IN")%></span>
                        <span class="price-period">per night</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
   <div class="row">
    <div class="col-8 offset-2">
        <div class="btns">
            <a href="/listings/<%=listing._id%>/edit" 
                class="btn edit-btn">
                Edit</a>

            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark" type="submit">Delete</button>
            </form>
        </div>
    </div>
    <div class="col-8 offset-2">
        <h4> Leave a Review </h4>
        <form>
            <div>
                <label for="rating">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div>
                <label for="comment">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="10"></textarea>
            </div>
            <button>Submit</button>
        </form>
    </div>
</div>
</body>
